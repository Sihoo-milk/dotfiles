{
  "files.encoding": "utf8", // ファイルの読み取り/書き込みで使用する規定の文字セット エンコーディング
  "workbench.startupEditor": "none", // 起動時に表示するエディター（none：エディターを開かない）
  "security.workspace.trust.enabled": false,

  // ===================================
  // UI
  // ===================================

  // Theme
  // -----------------------------------
  "workbench.colorTheme": "Iceberg",

  // Title Bar
  // -----------------------------------
  "window.title": "${activeEditorLong}", // タイトルバーにパスを表示

  // Command Center
  // -----------------------------------
  "window.commandCenter": false,

  // Activity Bar
  // -----------------------------------
  // "workbench.activityBar.location": "hidden",

  // Sidebars
  // -----------------------------------
  "explorer.compactFolders": false, // フォルダをコンパクト表示せずに階層で表示
  "workbench.tree.indent": 15, // Explorerのインデント
  "workbench.tree.renderIndentGuides": "always",
  "workbench.iconTheme": "vscode-icons",

  // Editor
  // -----------------------------------
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "boundary",

  // -- Font
  "editor.fontFamily": "'HackGen35 Console NF'",
  "editor.fontSize": 17,
  "editor.lineHeight": 1.6,

  // -- Breadcrumbs
  "breadcrumbs.enabled": false,

  // -- Diff
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.experimental.showMoves": true,

  // Panel
  // -----------------------------------
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.osx": "zsh", // ターミナルのShellをZshに変更

  // -- Font
  "terminal.integrated.fontFamily": "'HackGen35 Console NF'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.4,

  // ===================================
  // Format
  // ===================================
  "editor.tabSize": 2, // タブを押した時のスペースの数
  "editor.wordWrap": "on", // 長いコードの時、見た目だけ折り返す
  "editor.formatOnPaste": true, // ペースト時にフォーマット
  "editor.formatOnType": true, // タイプ時にフォーマット
  "files.insertFinalNewline": true, // ファイル末尾に自動的に改行を挿入
  "files.trimFinalNewlines": true, // ファイル末尾の連続した空行を自動で削除する
  "files.trimTrailingWhitespace": true, // ファイルの保存時に末尾の空白をトリミング
  "prettier.useEditorConfig": false,

  // HTML
  // -----------------------------------
  "[html]": {
    // -- Formatter
    // "editor.defaultFormatter": "vscode.html-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // -- Auto format
    "editor.formatOnSave": false
  },

  // -- Format options
  "html.format.indentInnerHtml": false, // headとbodyをインデント
  "html.format.indentHandlebars": false, // Handlebarsの式({{expression}})の内側がHandlebarsの式を基準にインデント
  "html.format.extraLiners": "", // 指定タグの前に空行を追加する
  "html.format.wrapLineLength": 0, // 1行あたりの最大文字数 (0 = 無効にする)
  "html.format.wrapAttributes": "force-expand-multiline",
  // "html.format.unformatted": "!DOCTYPE, meta, title, link, script, noscript", // フォーマット除外タグ

  // CSS
  // -----------------------------------
  "[css]": {
    // -- Formatter
    // "editor.defaultFormatter": "vscode.html-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // -- Auto format
    "editor.formatOnSave": false
  },

  "css.lint.validProperties": ["composes"],

  // Sass
  // -----------------------------------
  "[scss]": {
    // -- Formatter
    // "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter",
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // -- Auto format
    "editor.formatOnSave": false
  },

  // JavaScript
  // -----------------------------------
  "[javascript]": {
    // -- Formatter
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // -- Auto format
    "editor.formatOnSave": true
  },

  // JSON
  // -----------------------------------
  "[json]": {
    // -- Formatter
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // -- Auto format
    "editor.formatOnSave": true
  },

  // EJS
  // -----------------------------------
  "[ejs]": {
    // -- Formatter
    "editor.defaultFormatter": "vscode.html-language-features",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "html.format.templating": true, // EJSのフォーマット設定
  "files.associations": {
    "*.ejs ": "html"
  },

  // Svelte
  // -----------------------------------
  "[svelte]": {
    // -- Formatter
    // "editor.defaultFormatter": "esbenp.prettier-vscode"

    // -- Auto format
    "editor.formatOnSave": false
  },

  // PHP
  // -----------------------------------
  "[php]": {
    // -- Formatter
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",

    // -- Auto format
    "editor.formatOnSave": false
  },

  // Markdown
  // -----------------------------------
  "[markdown]": {
    // -- Auto format
    "editor.formatOnSave": true
  },

  // ===================================
  // Emmet
  // ===================================
  "emmet.variables": {
    "lang": "ja"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "ejs": "html"
  },

  // ===================================
  // Plugins
  // ===================================

  // Vim
  // -----------------------------------
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "/Users/maenotomohiro/.vimrc",
  "vim.statusBarColorControl": false, // statusbarの色のコントロールをする
  "vim.leader": "<space>", // Map Leaderの設定
  "vim.useSystemClipboard": true, // system clipboardと同期する
  "vim.hlsearch": true,
  "vim.visualstar": true, // カーソル上にあるワードを"*"で検索
  "vim.foldfix": true, // 折りたたまれている行を乗り越える

  // -- EasyMotion
  "vim.easymotion": true, // vim plugin有効化
  "vim.easymotionKeys": "sdfghjkl", // マーカーに使用される文字列

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Leader>", ":"],
      "commands": [{ "command": "workbench.action.showCommands" }]
    }, // コマンドパレット
    {
      "before": ["<Leader>", ";"],
      "commands": [{ "command": "workbench.action.quickOpen" }]
    }, // ファイル検索

    // -- diffモード時のフォーカススイッチ
    {
      "before": ["<C-w>", "h"],
      "commands": [
        {
          "command": "workbench.action.compareEditor.focusSecondarySide"
        }
      ]
    },
    {
      "before": ["<C-w>", "l"],
      "commands": [
        {
          "command": "workbench.action.compareEditor.focusPrimarySide"
        }
      ]
    }
  ],

  // -- zenhan
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "0",
  "vim.autoSwitchInputMethod.obtainIMCmd": "D:\\zenhan\\bin64\\zenhan.exe 0",
  "vim.autoSwitchInputMethod.switchIMCmd": "D:\\zenhan\\bin64\\zenhan.exe {im}",

  // Live Server
  // -----------------------------------

  // Live Sass Compiler
  // -----------------------------------
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/dist/css"
    }
  ],
  "liveSassCompile.settings.excludeList": [
    // -- 対象外とするフォルダを指定
    "**/node_modules/**",
    ".vscode/**",
    ".history/**"
  ],
  "liveSassCompile.settings.autoprefix": [
    // -- ベンダープレフィックスの指定
    "last 2 versions",
    "Android >= 4",
    "ios_saf >= 8"
  ],

  // PHP Intelephense
  // -----------------------------------
  "php.validate.enable": false,
  "php.suggest.basic": false,

  "intelephense.stubs": [
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "com_dotnet",
    "Core",
    "ctype",
    "curl",
    "date",
    "dba",
    "dom",
    "enchant",
    "exif",
    "FFI",
    "fileinfo",
    "filter",
    "fpm",
    "ftp",
    "gd",
    "gettext",
    "gmp",
    "hash",
    "iconv",
    "imap",
    "intl",
    "json",
    "ldap",
    "libxml",
    "mbstring",
    "meta",
    "mysqli",
    "oci8",
    "odbc",
    "openssl",
    "pcntl",
    "pcre",
    "PDO",
    "pdo_ibm",
    "pdo_mysql",
    "pdo_pgsql",
    "pdo_sqlite",
    "pgsql",
    "Phar",
    "posix",
    "pspell",
    "readline",
    "Reflection",
    "session",
    "shmop",
    "SimpleXML",
    "snmp",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "sqlite3",
    "standard",
    "superglobals",
    "sysvmsg",
    "sysvsem",
    "sysvshm",
    "tidy",
    "tokenizer",
    "xml",
    "xmlreader",
    "xmlrpc",
    "xmlwriter",
    "xsl",
    "Zend OPcache",
    "zip",
    "zlib",
    "wordpress"
  ],
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.format.braces": "k&r",

  // Markdown
  // -----------------------------------
}
