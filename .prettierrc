{
  "singleAttributePerLine": true,
  "htmlWhitespaceSensitivity": "strict",
  "useTabs": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "doctype": "<!DOCTYPE html>"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "singleQuote": false
      }
    }
  ]
}
